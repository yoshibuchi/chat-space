.chat-main
  .chat-main__main-header{"data-group-id": "#{@group.id}"}
    .chat-main-header__left-box
      .chat-main-header__left-box__current-group
        =@group.name

      .chat-main-header__left-box__member-list
        Member :
        - @group.users.each do |user|
          = user.name
        .chat-main-header__left-box__member-list__member
    =link_to edit_group_path(@group.id) do
      .chat-main__right-header Edit
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      .form__input-box
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        = f.label :image, class: 'form__input-box__image' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit-btn'         
 